            ul.coop_feature_list
              li
                i
                p #{LangService.flat("pc","5 * 24 hours trading time")}
              li
                i
                p!= LangService.flat("pc","Diverse assets Meet your diversified investment demands")
              li
                i
                p!= LangService.flat("pc","Earn as much as 90% return Make money easily")
              li
                i
                p!= LangService.flat("pc","Fixed income For each trading profit and loss rate")
              li
                i
                p #{LangService.flat("pc","Instant withdrawal within 2 hours")}
        div.coop_space
        div.coop_aboutUs
          div.wrap
            ul.coop_about_list
              li
                h4 #{LangService.flat("pc","Company Profile")}
                p #{LangService.flat("pc","Ultrabanc.com trading platform is independently operated by Ultrabanc, which is an Internet financial services provider, with strong financial background, great technical team and is committed to build a worldwide leading binary options.")}
